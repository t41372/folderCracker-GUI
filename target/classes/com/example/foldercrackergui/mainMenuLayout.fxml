<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" prefHeight="299.0" prefWidth="375.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.foldercrackergui.mainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
   
       <Label text="Delete All the sub folders and get the files out!!" textAlignment="CENTER" wrapText="true" />
      <Label text="Select a folder, and I will delete all the sub folders and get the files into a folder called &quot;result&quot;" textAlignment="CENTER" wrapText="true" />
      <HBox alignment="CENTER" prefHeight="79.0" prefWidth="335.0" spacing="10.0">
         <children>
             <Button fx:id="selectFolderButton" alignment="CENTER" onAction="#selectFolderButtonOnAction" text="Select The Folder" textAlignment="CENTER" />
            <Button fx:id="executeButton" mnemonicParsing="false" onAction="#executeButtonOnAction" text="Break All the Sub Folders!!" />
         </children>
      </HBox>
      <Label text="Current Selected Folder:" textAlignment="CENTER" wrapText="true" />
      <Label fx:id="showSelectedPathLabel" text="Selected Nothing" textAlignment="CENTER" wrapText="true" />
   </children>
</VBox>
